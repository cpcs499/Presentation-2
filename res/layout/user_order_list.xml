<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfcf7"  >

    <ImageView
        android:id="@+id/order_shop_name"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_x="-1dp"
        android:layout_y="3dp"
        android:src="@drawable/empty" />

    <TextView
        android:id="@+id/order_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_payment_type"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/shop_name_of_order"
        android:layout_x="74dp"
        android:layout_y="76dp"
        android:text="TextView" />

    <Button
        android:id="@+id/cancel_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shop_name_of_order"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/order_cost"
        android:layout_x="184dp"
        android:layout_y="6dp"
        android:background="@drawable/signin"
        android:text="Cancel Order" />

    <TextView
        android:id="@+id/order_status_of_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/order_shop_name"
        android:layout_toLeftOf="@+id/cancel_order"
        android:text="TextView" />

    <TextView
        android:id="@+id/order_payment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_status_of_shop"
        android:layout_toLeftOf="@+id/cancel_order"
        android:text="TextView" />

    <TextView
        android:id="@+id/shop_name_of_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/order_shop_image"
        android:layout_below="@+id/order_shop_image"
        android:text="TextView" />

    <com.parse.ParseImageView
        android:id="@+id/order_shop_image"
        android:layout_width="58dp"
        android:layout_height="66dp"
        android:layout_alignLeft="@+id/user_order_list_view"
        android:layout_alignParentTop="true"
        android:src="@drawable/shop" />

    <Button
        android:id="@+id/submit_all_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cancel_order"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cancel_order"
        android:background="@drawable/follow"
        android:text="Submit Order" />

    <ListView
        android:id="@+id/user_order_list_view"
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01" >

    </ListView>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/submit_all_order"
        android:text="____________________________________________________" />

</RelativeLayout>
