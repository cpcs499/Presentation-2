<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fbfcf7" >

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="327dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/color1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/borde" />

            <ImageView
                android:id="@+id/color2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/borde" />

            <ImageView
                android:id="@+id/color3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/borde" />

            <ImageView
                android:id="@+id/color4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/borde" />

            <ImageView
                android:id="@+id/color5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/borde" />
        </LinearLayout>
    </HorizontalScrollView>

     <HorizontalScrollView
         android:id="@+id/horizontalScrollView2"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_x="70dp"
         android:layout_y="384dp" >

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="42dp"
             android:orientation="horizontal" >

             <EditText
                 android:id="@+id/qnt1"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:scrollHorizontally="true" />

             <EditText
                 android:id="@+id/qnt2"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:scrollHorizontally="true" />

             <EditText
                 android:id="@+id/qnt3"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:scrollHorizontally="true" />

             <EditText
                 android:id="@+id/qnt4"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:scrollHorizontally="true" />

             <EditText
                 android:id="@+id/qnt5"
                 android:layout_width="40dp"
                 android:layout_height="wrap_content"
                 android:scrollHorizontally="true" />
         </LinearLayout>
     </HorizontalScrollView>

     <Button
         android:id="@+id/update"
         style="?android:attr/buttonStyleSmall"
         android:layout_width="wrap_content"
         android:layout_height="38dp"
         android:layout_x="257dp"
         android:layout_y="12dp"
         android:background="@drawable/signin_b"
         android:text="Update"
         android:textColor="#ffffff" />

     <EditText
         android:id="@+id/price"
         android:layout_width="270dp"
         android:layout_height="35dp"
         android:layout_x="43dp"
         android:layout_y="450dp"
         android:background="@drawable/signupfield"
         android:ems="10"
         android:hint="Price"
         android:paddingLeft="10dp"
         android:textSize="14sp" />

     <EditText
         android:id="@+id/DescSet"
         android:layout_width="270dp"
         android:layout_height="69dp"
         android:layout_x="49dp"
         android:layout_y="258dp"
         android:background="@drawable/signupfield"
         android:ems="10"
         android:hint="Desc"
         android:paddingLeft="10dp"
         android:textSize="14sp" />

     <EditText
         android:id="@+id/NameSet"
         android:layout_width="270dp"
         android:layout_height="35dp"
         android:layout_x="50dp"
         android:layout_y="214dp"
         android:background="@drawable/signupfield"
         android:ems="10"
         android:hint="Product name"
         android:paddingLeft="10dp"
         android:textSize="14sp" >

         <requestFocus />
     </EditText>

     <ImageView
         android:id="@+id/phone"
         android:layout_width="177dp"
         android:layout_height="177dp"
         android:layout_x="69dp"
         android:layout_y="21dp" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_x="8dp"
         android:layout_y="371dp"
         android:text="Colors\nAvailables:" />
    
</AbsoluteLayout>